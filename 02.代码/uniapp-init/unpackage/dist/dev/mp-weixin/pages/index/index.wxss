.indexContainer .header {
  display: flex;
  padding-top: 20rpx;
  align-items: center;
}
.indexContainer .header .logo {
  width: 118rpx;
  height: 40rpx;
  margin: 0 20rpx;
}
.indexContainer .header .search {
  position: relative;
  height: 60rpx;
  background-color: #c0c0c0;
  flex-grow: 1;
  border-radius: 10rpx;
  padding-left: 60rpx;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.indexContainer .header .search .searchInput {
  height: 100%;
}
.indexContainer .header .search .searchInput .placeholder {
  text-align: center;
  font-size: 24rpx;
  text-indent: -40rpx;
}
.indexContainer .header .username {
  width: 140rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #f00;
  margin: 0 20rpx;
}

